<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:onClick="onSpeakerClick">

    <TextView
        android:id="@+id/eventSpeakertitleFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speaker"
        android:textColor="#839192"
        android:textSize="8pt"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/eventSpeakerFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/imageHintFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Click here to show the speaker)"
        android:textColor="@color/hintColor"
        android:textSize="6pt"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/speakerImageFrag"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Speaker image"
        android:visibility="gone"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal_background" />

    <TextView
        android:id="@+id/EventSpeakInfoFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:lineSpacingExtra="2sp"/>

</LinearLayout>
